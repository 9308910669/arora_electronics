        print("\t\t\t 7. Search by similar address")
        print("\t\t\t 8. Main Menu")
        print()

        user  = input("enter no from the above choices: ")
        if user == '1':
            search_by_name()
        if user == '2':
            search_by_mo_no()
        if user == '3':
            search_by_cus_id()
