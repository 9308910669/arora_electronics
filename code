def search_by_name_like():
    try:
        name = input("enter the approx name you remember: ")
        sql = "SELECT * FROM customer WHERE customer_name LIKE %%;"
        val = (name,)
        mycursor.execute(sql,name)
        mydb.commit()
        for i in mycursor:
            print(i)
    except:
        print("No such name found in the database! ")

